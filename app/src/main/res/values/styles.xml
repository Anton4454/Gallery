<resources>
    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/darkBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/darkBackground</item>
        <item name="android:navigationBarColor">@color/darkBackground</item>
    </style>

    <style name="FullSizeImageTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="background">@color/darkBackground</item>
        <item name="android:navigationBarColor">@color/darkBackground</item>
    </style>

    <style name="SplashStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="background">@color/darkBackground</item>
        <item name="android:navigationBarColor">#ffffff</item>
    </style>

</resources>